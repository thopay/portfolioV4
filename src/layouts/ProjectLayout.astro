---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import { Icon } from 'astro-icon';
const {frontmatter} = Astro.props;
---
<Layout title={frontmatter.title} description={frontmatter.description} image={frontmatter.image}>
	<Nav page="project"/>
	<div class="projectSection">
		<h1 class="projectTitle">{frontmatter.title}</h1>
		<div class="navigation">
			<div class="back">
				<a href="/projects" class="backButton"><Icon pack="ri" name="arrow-left-line" class="backIcon"/>Back</a>
			</div>
			<a href={frontmatter.link}><h2 class="projectLink">View Here</h2></a>
			<div class="postDateContainer">
				<p class="postDate">{frontmatter.date}</p>
			</div>
		</div>
		<div class="projectContent">
			<slot />
		</div>
	</div>
	</div>
</Layout>

<style>
	.projectSection {
		background-color: #fff;
		min-height: 100vh;
		width: 100%;
		display: flex;
		align-items: center;
		flex-direction: column;
		padding: 4em 2em;
		overflow: hidden;
	}
	.projectTitle {
		color: #000;
		text-align: center;
		font-family: Poppins;
		font-size: 32px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
	}
	.projectLink {
		color: #FFC107;
		text-align: center;
		font-family: Poppins;
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
	}
	.projectContent {
		margin-top: 2em;
		width: 100%;
		max-width: 800px;
	}
	:global(.projectContent h1) {
		font-family: Poppins;
		font-size: 32px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent h2) {
		font-family: Poppins;
		font-size: 24px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent h3) {
		font-family: Poppins;
		font-size: 20px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent h4) {
		font-family: Poppins;
		font-size: 18px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent h5) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent h6) {
		font-family: Poppins;
		font-size: 14px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent p) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 300;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent a) {
		color: #FFC107;
	}
	:global(.projectContent a:hover) {
		color: #FFC107;
		text-decoration: underline;
	}
	:global(.projectContent ul) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}
	:global(.projectContent ol) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
		counter-reset: item;
	}
	:global(.projectContent ol li) {
		counter-increment: item;
	}
	:global(.projectContent ol li)::before {
		content: counter(item) ". ";
	}
	:global(.projectContent ul li)::before {
		content: "â€¢ ";
	}
	:global(.projectContent li) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
	}

	:global(.projectContent blockquote) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		margin-bottom: 1em;
		color: black;
		border-left: 4px solid #FFC107;
		padding-left: 1em;
	}
	:global(.projectContent pre) {
		font-family: 'Fira Code', monospace;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		color: black;
		padding: 1em;
		border-radius: 4px;
		margin: 1em 0.25em;
	}
	:global(.projectContent hr) {
		border: 1px solid #FFC107;
		margin: 2em 0;
		margin-left: 5%;
		margin-right: 5%;
	}
	:global(.projectContent img) {
		width: 100%;
		max-width: 800px;
		margin: 1em 0;
		padding: 1em;
	}
	:global(.projectContent table) {
		width: 100%;
		max-width: 800px;
		margin: 1em 0;
	}
	:global(.projectContent table th) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 600;
		line-height: normal;
		color: black;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
	}
	:global(.projectContent table td) {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 300;
		line-height: normal;
		color: black;
		padding: 0.5em 0.25em;
	}
	:global(.projectContent table tr) {
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
	}
	:global(.projectContent table tr:last-child) {
		border-bottom: none;
	}
	:global(.projectContent table tr:nth-child(2n)) {
		background-color: rgba(0, 0, 0, 0.1);
	}
	:global(.projectContent table tr:nth-child(2n+1)) {
		background-color: rgba(0, 0, 0, 0.05);
	}
	:global(.projectContent table tr:hover) {
		background-color: rgba(0, 0, 0, 0.2);
	}
	:global(.projectContent table tr:hover td) {
		color: black;
	}
	:global(.projectContent table tr:hover th) {
		color: black;
	}
	.navigation {
		display: flex;
		width: 100%;
		max-width: 800px;
		justify-content: space-between;
	}
	.back {
		display: flex;
		align-items: center;
		color: rgba(0, 0, 0, 0.5);
		transition: all 0.2s ease-in-out;
	}
	.back:hover {
		color: rgba(0, 0, 0, 1);
	}
	.backButton {
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		display: flex;
		align-items: center;
		flex-direction: row;
	}
	.backIcon {
		height: 32px;
		margin-right: 0.5em;
	}
	.projectIcon {
		height: 100px;
		color: black;
	}
	.postDateContainer {
		display: flex;
		align-items: center;
	}
	.postDate {
		color: rgba(0, 0, 0, 0.5);
		font-family: Poppins;
		font-size: 16px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		margin-left: 1em;
	}
</style>
