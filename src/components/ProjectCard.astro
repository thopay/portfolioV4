---
import { Icon } from 'astro-icon';
export interface Props {
	title: string;
	description: string;
	type: 'page' | 'github'
}

const { title, description, type } = Astro.props;
---
<div class="projectContainer">
	<div class="projectImage">
		<img src="https://via.placeholder.com/300x300" />
	</div>
	<div class="projectTitle">
		{title}
	</div>
	<div class="projectDesc">
		{description}
	</div>
	<div class="linkContainer">
		<div class="projectLink">
			Visit {type == 'page' ? 'Page' : 'GitHub'} <Icon pack="ph" name="arrow-right" class="linkIcon" />
		</div>
	</div>
</div>
<style>
	.projectContainer {
		width: 300px;
		height: auto;
		display: flex;
		align-items: left;
		flex-direction: column;
		margin: 15px;
		padding: 15px;
		transition: 0.4s;
		border-radius: 5px;
		justify-self: center;
		margin-bottom: 50px;
		overflow: hidden;
	}
	.projectContainer:hover {
		cursor: pointer;
	}
	.projectImage {
		width: 100%;
		border: 2px solid #000;
		margin-bottom: 40px;
	}
	.projectTitle {
		font-family: 'Poppins';
		font-weight: 500;
		color: #000;
		font-size: 20px;
		margin-bottom: 15px;
	}
	.projectDesc {
		font-family: 'Poppins';
		font-weight: 200;
		color: rgba(0, 0, 0, 0.5);
		font-size: 16px;
		margin-bottom: 25px;
	}
	.linkContainer {
		display: flex;
		justify-content: flex-end;
		text-align: right;
		width: 100%;
	}
	.projectLink {
		font-family: 'Poppins';
		font-weight: 300;
		color: #000;
		font-size: 16px;
		display: flex;
	}
	.linkIcon {
		height: 24px;
		margin-left: 5px;
	}
</style>